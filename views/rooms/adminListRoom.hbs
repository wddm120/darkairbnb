<div class="main-info">

  <div class="sub-header">
    <h1>{{headingInfo}}</h1>
  </div>
  <nav class="sub-nav">
    <ul>
      <li><a href="/admin/dashboard">Dashboard</a></li>
      <li><a href="/admin/room/add">Add Room</a></li>
      <li><a href="/admin/logout">Logout </a></li>
    </ul>
  </nav>

  <div class="room">
    {{#each data }}

    <ul class="room-info">
      <li><img src="/public/img/rooms/{{this.roomPic}}"></li>
      <li class="top-room-info">
        <h3>{{this.title}}</h3>
      </li>
      <li><label>{{this.description}}</label></li>
      <li><label>${{this.price}} CAD / night</label></li>
      <li><label>City : {{this.city}}</label></li>
      <li><label>Province : {{this.province}}</label></li>
      <li><label>Country :</label>{{this.country}}</li>
      <li><label>Status : </label>{{this.status}}</li>
      <li class="btn"><a href="/admin/room/edit/{{this.id}}">Edit</a></li>
      <li class="btn"><a href="/admin/room/delete/{{this.id}}?method=DELETE">Delete</a></li>
    </ul>

    {{/each}}
  </div>
</div>