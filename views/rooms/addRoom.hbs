<div class="main-info">
    <div class="sub-header">
        <h1>{{headingInfo}}</h1>
    </div>
    <nav class="sub-nav">
        <ul>
            <li><a href="/rooms/edit">Edit Room</a></li>
            <li><a href="/admin/logout">Logout </a></li>
        </ul>
    </nav>
    <div class="info">
        <form method="POST" action="/room/add">
        <ul>
            <li><label>File Upload</label><input type="file" name="profilePic" id="profilePic"></li>
            <li><label>Title</label><input type="text" name="title" id="title"></li>
            <li><label>Description</label><textarea id="description" name="description"></textarea></li>
            <li><label>Price</label><input type="text" name="price" id="price"></li>
            <li><label>Address</label><input type="text" name="address" id="address"></li>
            <li><label>Status</label>
            <select name="status">
                <option value="open">Available</option>
                <option value="close">Not Available</option>
            </select>
            </li>
        </ul>
        <div class="sub-footer">
            <input type="submit" value="Add">
        </div>
        </form>
    </div>
</div>