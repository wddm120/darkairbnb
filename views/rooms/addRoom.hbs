        <form method="POST" action="/admin/room/add" enctype="multipart/form-data">
        <ul>
            <li><label>File Upload</label><input type="file" name="roomPic" id="roomPic"></li>
            <li><label>Title</label><input type="text" name="title" id="title"></li>
