            <li><label>Price</label><input type="text" name="price" id="price"></li>
            <li><label>Address</label><input type="text" name="address" id="address"></li>
            <li><label>City</label><input type="text" name="city" id="city"></li>
            <li><label>Province</label><input type="text" name="province" id="province"></li>
            <li><label>Country</label><input type="text" name="country" id="country"></li>
