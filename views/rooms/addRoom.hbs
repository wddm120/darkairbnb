<div class="main-info">
    <div class="sub-header">
        <h1>{{headingInfo}}</h1>
    </div>
    <nav class="sub-nav">
        <ul>
            <li><a href="/admin/room/list">List Room</a></li>
            <li><a href="/admin/logout">Logout </a></li>
