<div>
  <h1>{{headingInfo}}</h1>
  <form method="POST" action="/user/edit">
  <ul>
    <li><img src="/img/users/{{profilePic}}"> </li>
    <li><label>File Upload</label><input type="file" name="profilePic" id="profilePic"></li>
    <li><label>First name</label>  <input type="text" name="firstName" id="firstName">{{firstName}}</li>
    <li><label>Last name</label>  <input type="text" name="lastName" id="lastName">{{lastName}}</li>
    <li><label>Gender</label> 
        <select name="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
    </li>
    <li><label>Date of birth</label> <input type="date" name="dob" id="dob" value="{{dob}}">{{dob}} </li>
    <li><label>Email address</label> <input type="text" name="email" id="email">{{email}}</li>
    <li><label>Phone number</label> <input type="text" name="phone" id="phone">{{phone}}</li>
    <li><label>Government ID</label> <input type="text" name="govid" id="govid">{{govid}}</li>
    <li><label>Address</label ><input type="text" name="address" id="address">{{address}}</li>
  </ul>
   <input type="submit" value="Save">
   </form>
</div>